group :development do
  gem 'web-console'
  gem 'listen', '~> 3.0.5'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'pry-byebug'
end

group :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'capybara'
