<!DOCTYPE html>
<html>
  <head>
    <title>Debate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="top-bar">Logged in as <%= link_to current_user.display_username, '/users/edit' %> - <a href="/users/sign_out" data-method="delete">Logout</a></div>
    <% end %>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
